<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Image -->
    <item>
        <bitmap
            android:src="@drawable/background_design"
            android:gravity="fill"/>
    </item>

    <!-- Optional: Add a semi-transparent overlay for better text visibility -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#B3000000"/> <!-- Semi-transparent black overlay -->
        </shape>
    </item>
</layer-list>
