<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Algorithm Visualizations"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Sorting Algorithms -->
    <TextView
        android:id="@+id/sorting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sorting Algorithms"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Searching Algorithms -->
    <TextView
        android:id="@+id/searching"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Searching Algorithms"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/sorting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Stack Array Implementation -->
    <TextView
        android:id="@+id/stackArray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stack Array Implementation"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/searching"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Stack Linked List Implementation -->
    <TextView
        android:id="@+id/stackList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stack Linked List Implementation"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/stackArray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Infix to Postfix/Prefix -->
    <TextView
        android:id="@+id/infixToPostfix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Infix to Postfix/Prefix"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/stackList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Postfix to Prefix/Infix -->
    <TextView
        android:id="@+id/infixToPrefix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Postfix to Prefix/Infix"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/infixToPostfix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Prefix to Postfix/Infix -->
    <TextView
        android:id="@+id/prefixToPostfix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Prefix to Postfix/Infix"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/infixToPrefix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Queue Array Implementation -->
    <TextView
        android:id="@+id/queueArray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Queue Array Implementation"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/prefixToPostfix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Queue Linked List Implementation -->
    <TextView
        android:id="@+id/queueList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Queue Linked List Implementation"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/queueArray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- BST Visualize Implementation -->
    <TextView
        android:id="@+id/BstVisualize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BST Visualization"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/queueList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
    <!-- AVL Visualize Implementation -->
    <TextView
        android:id="@+id/AVLVisualize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AVL Visualization"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#007BFF"
        android:gravity="center"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/BstVisualize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
